extends ../../layouts/default.pug

block main 
    

    if(role.permission.includes("accounts_view")) 
    h1(class = "mb-4") Danh Sách Tài Khoản 
    .card.mb-3  
        .card-header Danh Sách 
        .card-body 
            .row   
                .col-8 
                .col-4.text-right 
                    if(role.permission.includes("accounts_create")) 
                        a(
                            href=`${prefixAdmin}/accounts/create`
                            class= "btn btn-outline-success"
                        ) + Thêm Mới
            table(class="table table-hover table-sm"
                checkbox-multi)
                thead
                    tr 
                        th STT
                        th Avatar
                        th Họ Tên
                        th Phân Quyền
                        th Email 
                        th Trạng Thái
                        th Hành Động

                tbody 
                each item,index in accounts
                    tr
                        td #{index+1}
                        td
                            img(src=item.avatar
                            width="100px"
                            height= "auto")
                        td #{item.fullname}
                        td #{item.role.title}
                        td #{item.email}
                        if(role.permission.includes("accounts_edit"))  
                        td 
                       
                            if item.status == "active"
                                a(
                                href="javascript:;"
                                data-status = "active"
                                data-id = item.id
                                button-change-status
                                class="badge badge-success"
                                ) Hoạt Động
                            else
                                a(
                                href="javascript:;"
                                data-status = "inactive"
                                data-id = item.id
                                button-change-status
                                class="badge badge-danger"
                                ) Dừng Hoạt Động      
                        if(role.permission.includes("accounts_edit") && role.permission.includes("accounts_delete"))  
                        td  
                       
                            a(href=`${prefixAdmin}/accounts/edit/${item.id}` 
                            class="btn btn-warning btn-sm")  Sửa
                            a(href=`${prefixAdmin}/accounts/detail/${item.id}`
                                class="btn btn-primary btn-sm ml-1 text-white") Chi tiết
                            button(
                                class="btn btn-danger btn-sm ml-1"
                                button-delete
                                data-id= item.id
                            ) Xoá


    script(src="/admin/js/product.js") 