extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main

    +alert-error(5000)
    +alert-success(3000)
    h1(class="mb-4") #{pageTitle}
    form(action=`${prefixAdmin}/my-account/edit?_method=PATCH`
      method="POST"
      enctype = "multipart/form-data"
      )
        div(class="form-group")
            label(for="fullname") Họ Tên:
            input(class="form-control" 
                id="fullname" 
                name="fullname"
                value=user.fullname
                )
           
        div(class="form-group")
            label(for="email") Email:
            input(class="form-control" type="text" id="email" name="email" value=user.email)
        
        div(class="form-group")
            label(for="password") Mật Khẩu:
            input(class="form-control" 
            type="password"
            id="password"
            name="password"
            value= user.password
            )

        div(class="form-group")
            label(for="phone") Số Điện Thoại:
            input(class="form-control" type="text" id="phone" name="phone" value=user.phone) 
        
        div(class="form-group" upload-image) 
            label(for="avatar") Avatar:
            input(type="file" 
                id="avatar" 
                name="avatar" 
                accept="image/*" 
                class="form-control-file"           
                upload-image-input)
            img(
            src=user.avatar 
            class="image-preview" 
            upload-image-preview)
        
        div(class="form-group")
            button(class="btn btn-danger" button-delete) Xoá ảnh
            
        div(class="form-group")
            button.btn.btn-primary(type="submit") Cập nhật tài khoản
    
   
