extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    
    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center" ) Lấy lại mật khẩu 
                form(action=`/user/password/reset`,
                method="post")
                    div(class="form-group")
                        label(for="password") Mật Khẩu
                        input(type="password"
                        class= "form-control"
                        id="password"
                        name= "password"
                        required
                        )
                    div(class="form-group")
                        label(for="confirmPassword") Mật Khẩu mới 
                        input(type="password"
                        class= "form-control"
                        id="confirmPassword"
                        name= "confirmPassword"
                        required
                        )
                    div(class="form-group")
                        button(class= "btn btn-primary btn-block"
                        type="submit"
                        ) Đổi mật khẩu 
            