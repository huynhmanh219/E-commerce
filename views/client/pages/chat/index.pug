extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3
        .row 
            .col-12 
                +box-head("chat")
        .row
            .col-12 
                .chat(my-id=user.id) 
                    //- .div #{chat}
                    .inner-body
                        each chat in chats
                            div(class=(chat.user_id === user.id ? "inner-outgoing" : "inner-incoming"))
                                if(chat.user_id != user.id)
                                    .inner-name #{chat.infoUser.fullname}
                                if(chat.content)
                                    .inner-content 
                                        | #{chat.content}
                                if(chat.images)
                                    .inner-images 
                                        each image in chat.images 
                                            img(src=image, alt="")
