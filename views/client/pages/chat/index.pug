extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3
        .row 
            .col-12 
                +box-head("chat")
        .row
            .col-12 
                .chat 
                    .inner-body
                        .inner-name A
                        .inner-content aaaaaa
                    .inner-outgoing 
                        .inner-content bbbbb
                    .inner-incoming 
                        .inner-name A
                        .inner-content aaaaaa
                    
                    .inner-foot
                        form(
                            class="inner-form"
                            action= ""
                        )
                            input(
                                type="text"
                                name="content"
                                placeholder="nhập nội dung..."
                            )
                            button
                                i.fa-solid.fa-paper-plane