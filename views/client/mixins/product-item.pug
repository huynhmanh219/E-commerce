mixin product-item(item)
    .col-4.mb-3 
            .product-item
             .inner-image
                img(src=item.thumbnail, alt=item.title, srcset="")
             .inner-content 
                if(item.featured == "1")
                    .inner-featured Nổi Bật
                h3.inner-title
                  a(href=`/products/${item.slug}`) #{item.title}
                .inner-price-new #{item.pricenew}$
                .inner-price-old #{item.price}$
                .inner-discount #{item.discountPercentage}$